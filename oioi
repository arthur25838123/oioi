class Animal(val classe: String, val genero : Char, val habitat: String, val dieta : String, val idade : Int, val voa: Boolean){
    fun agitado(descontrolado: Boolean){
       if(descontrolado==true){
           println("animal dscontrolado")
       }else{
           println ("animal de boa")
       }
       
  fun faminto (com fome: Boolean){
      if (com fome = true {
          println ("animal com fome")
      }else{
          println ("animal sem fome")
      }
       
}
